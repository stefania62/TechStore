<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="365.0" prefWidth="380.0" spacing="20.0" style="-fx-background-color: #D6DEE1;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.finalprojectfx.login.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <ImageView fitHeight="43.0" fitWidth="54.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../../assets/images.png" />
      </image>
   </ImageView>
   <GridPane>
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="1.0" prefWidth="1.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <Label text="Username:" GridPane.halignment="CENTER" />
         <TextField fx:id="usernameTextField" prefHeight="25.0" prefWidth="224.0" promptText="Enter your username" GridPane.columnIndex="1" />
         <Label prefHeight="17.0" prefWidth="56.0" text="Password:" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
         <PasswordField fx:id="passwordTextField" promptText="Enter your password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         <ImageView fitHeight="32.0" fitWidth="39.0" pickOnBounds="true" preserveRatio="true" />
      </children>
   </GridPane>
   <FlowPane alignment="CENTER" columnHalignment="CENTER" prefHeight="41.0" prefWidth="371.0">
      <children>
          <Button alignment="CENTER" contentDisplay="CENTER" onAction="#onLoginButtonClick" prefHeight="29.0" prefWidth="77.0" text="Login" />
      </children>
   </FlowPane>
</VBox>
